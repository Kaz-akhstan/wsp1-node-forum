{% extends "layout.njk" %}
{% block  content %}
<div class="container">
  <ul>
    {% for row in rows %}
      <li>
        <div class="msg">
          <div class="msg-title">
            <p>{{ row.title }}</p>
            <p>@{{ row.name }}</p>
          </div>
          <div class="msg-content">
            <p>{{ row.content }}</p>
            <p>{{ row.createdAt }}</p>
            <div class="msg-links">
              <a href="">Like</a>
              <a href="">Comment</a>
              <a href="">Share</a>
              <a href="">Report</a>
            </div>
          </div>
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
{% endblock %}